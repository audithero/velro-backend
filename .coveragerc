[run]
# Coverage configuration for VELRO backend
source = .
omit = 
    # Test files
    tests/*
    test_*.py
    *_test.py
    
    # Virtual environment
    venv/*
    .venv/*
    env/*
    .env/*
    
    # Configuration files
    config.py
    database.py
    
    # Generated files
    htmlcov/*
    .coverage*
    coverage.json
    
    # Setup and migration files
    setup.py
    migrations/*
    
    # Debug and temporary files
    debug_*.py
    temp_*.py
    *_debug.py
    
    # Specific exclusions
    main.py  # Main FastAPI app file, tested via integration tests
    create_*.py  # One-off scripts
    apply_*.py  # Migration scripts
    fix_*.py  # Fix scripts
    manual_*.py  # Manual testing scripts
    quick_*.py  # Quick test scripts
    simple_*.py  # Simple test scripts

branch = True
parallel = True

[report]
# Reporting configuration
exclude_lines =
    # Standard exclusions
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    
    # Type checking exclusions
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Abstract methods
    @abc.abstractmethod
    @abstractmethod
    
    # Debug code
    import pdb
    pdb.set_trace()
    
    # Logging exclusions
    logger.debug
    logging.debug

ignore_errors = True
show_missing = True
precision = 2

[html]
directory = htmlcov
title = VELRO Backend Test Coverage

[json]
output = coverage.json
pretty_print = true

[xml]
output = coverage.xml